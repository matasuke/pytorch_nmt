{
    "name": "aspec-1",
    "n_gpu": 4,
    "arch": {
        "type": "Model",
        "args": {
             "emb_dim": 512,
             "in_vocab_size": 32000,
             "out_vocab_size": 32000,
             "hidden_dim": 512,
             "num_layers": 2,
             "dropout_ratio": 0.3,
             "brnn": true,
             "input_feed": true
        }
    },
    "train_data_loader": {
        "type": "Seq2seqDataLoader",
        "args":{
            "src_path": "data/corpora/aspec/train-1.ja",
            "tgt_path": "data/corpora/aspec/train-1.en",
            "src_preprocessor_path": "data/preprocessor/aspec-1.ja.pkl",
            "tgt_preprocessor_path": "data/preprocessor/aspec-1.en.pkl",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 4
        }
    },
    "val_data_loader": {
        "type": "Seq2seqDataLoader",
        "args":{
            "src_path": "data/corpora/aspec/val.ja",
            "tgt_path": "data/corpora/aspec/val.en",
            "src_preprocessor_path": "data/preprocessor/aspec-1.ja.pkl",
            "tgt_preprocessor_path": "data/preprocessor/aspec-1.en.pkl",
            "batch_size": 128,
            "shuffle": false,
            "num_workers": 4
        }
    },
    "test_data_loader": {
        "type": "Seq2seqDataLoader",
        "args":{
            "src_path": "data/corpora/test.ja",
            "tgt_path": "data/corpora/test.en",
            "src_preprocessor_path": "data/preprocessor/aspec-1.ja.pkl",
            "tgt_preprocessor_path": "data/preprocessor/aspec-1.en.pkl",
            "batch_size": 128,
            "shuffle": false,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Optim",
        "args":{
            "method":"sgd",
            "lr": 1,
            "lr_decay": 0.5,
            "max_grad_norm": 5,
            "start_decay_at": null
        }
    },
    "translator": {
        "type": "Translator",
        "args":{
            "replace_unk": true,
            "beam_width": 5,
            "n_best": 1,
            "max_length": 50
        },
        "output": "output.txt"
    },
    "loss": "nll_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "trainer": {
        "epochs": 50,
        "save_dir": "data/saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboardX": true,
        "log_dir": "data/saved/runs"
    }
}
